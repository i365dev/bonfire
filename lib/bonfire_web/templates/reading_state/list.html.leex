<table>
  <tbody>
<%= for reading_state <- @reading_states do %>
    <tr>
      <td>
        <%= link reading_state.book.metadata.title, to: Routes.reading_state_path(BonfireWeb.Endpoint, :show, reading_state) %>
        <%= render "_state.html", reading_state: reading_state, isbn: reading_state.book.metadata.isbn %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
