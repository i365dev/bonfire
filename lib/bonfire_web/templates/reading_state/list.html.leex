<table>
  <tbody>
<%= for rs <- @reading_states do %>
    <tr>
      <td>
        <%= link rs.book.metadata.title, to: Routes.reading_state_path(BonfireWeb.Endpoint, :show, rs) %>
        <%= live_component(@socket, BonfireWeb.Live.ReadingStateComponent, reading_state: rs, id: "rs-#{rs.id}") %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
